@using DakiHunt.Models.ViewModels
@inherits DakiHunt.Client.Components.Auth.RegisterPageBase
@page "/register"

<form>
    <div class="form-group">
        <label for="UserName">Email</label>
        <input bind="@RegisterViewModel.Email" id="Email" class="form-control" />
        <ValidationError Errors="@Errors" FieldName="Email" />
    </div>    
    <div class="form-group">
        <label for="UserName">UserName</label>
        <input bind="@RegisterViewModel.Username" id="UserName" class="form-control" />
        <ValidationError Errors="@Errors" FieldName="UserName" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input bind="@RegisterViewModel.Password" id="Password" type="password" class="form-control" />
        <ValidationError Errors="@Errors" FieldName="Password" />
    </div>  
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input bind="@RegisterViewModel.ConfirmPassword" id="Password" type="password" class="form-control" />
        <ValidationError Errors="@Errors" FieldName="ConfirmPassword" />
    </div>
    <div class="form-group">
        <button onclick="@(async () => await Register())" type="button" class="btn btn-default">Register</button>
    </div>
</form>



